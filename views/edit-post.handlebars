<article>
  <a href="/dashboard"> &larr; Go Back</a>
  <h2 class="title mt-5">Edit</h2><hr>
  <form class="edit-post-form">
    <div>
        <label for="post-title">Title</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="post-content">Body</label>
      <input class="textarea" name="post-content" type="text" value="{{post.post_content}}" />
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">save post</button>
    <button type="button" class="delete-post-btn">delete post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/public/js/edit-post.js"></script>
<script src="/public/js/delete-post.js"></script>
<script src="/public/js/comment.js"></script>